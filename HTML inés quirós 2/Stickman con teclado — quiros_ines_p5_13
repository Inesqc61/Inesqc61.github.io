<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>T12-calendario</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.9.0/p5.min.js"></script>
    </head>
    <body>
        <script>

      
        let xS, yS, dS, rS, vS;//sol
		let xL, yL, dL, rL, vL;//luna
		let dia, mes, anio;//calendario
 
        let xP, yP;        // posici칩n del personaje
        let S;             // tama침o base del stickman
        let vP;            // velocidad horizontal (izq/der)
        let groundY;       // altura del suelo (coincide con tu rect치ngulo de suelo en T12)             
         let vY;            // velocidad vertical del salto
        let jumpV;         // impulso del salto (valor negativo para subir)
        let g;             // gravedad (valor positivo para bajar)
        
        let rHead //cabeza
        let bodyL //cuerpo
        let armL  //brazo
        let legL  //pierna
        
        let hipY // cadera por encima de los pies
        let shoulderY  // hombros por encima de la cadera
        let headY // centro de la cabeza

        function setup() {
            createCanvas(900, 500);
			//sol
            dS = 0.1 * width;    
            rS = dS / 2;
            yS = 0.2 * height;  
            xS = -rS;            // por la izquierda
            vS = width / 400;  
//luna
dL = dS * 0.5; 
rL = dL / 2; 
xL = -width - rL; // fuera a la izquierda 
yL = height / 3; 
vL = vS; 		
//calendario
dia = 1;
mes = 1;
anio = 2025;
// Suelo (debe coincidir con el suelo que ya dibujas en T12)
groundY = 0.80 * height;

// Stickman: tama침o y posici칩n inicial
S  = 0.12 * min(width, height);
xP = 0.25 * width;
yP = groundY;                 // IMPORTANTE: aqu칤 yP ser치 la posici칩n de los pies

// Movimiento horizontal
vP = width / 150;

// Salto (valores sencillos)
vY = 0;
jumpV = -0.030 * height;      // impulso hacia arriba
g = 0.0016 * height;          // aceleraci칩n hacia abajo (peque침a)
        }

       function draw() {

    // D칤a / noche
    if (xS <= width + rS) {
        background(130, 206, 230); // d칤a
    } else {
        background(10); // noche
    }

    // Prado
    noStroke();
    fill(20, 120, 40);
    rect(0, 0.8 * height, width, 0.2 * height);

    // Sol
    fill(255, 210, 0);
    circle(xS, yS, dS);

    // Luna
    fill(200);
    circle(xL, yL, dL);

    // Movimiento
    xS += vS;
    xL += vL;

    // Reinicio + calendario
    if (xS >= 2 * width - rS) {
        xS = -rS;
        xL = -width - rL;

        // 游녤 CAMBIO DE FECHA
        dia++;

        if (dia > 30) {
            dia = 1;
            mes=mes+1;
        }

        if (mes > 12) {
            mes = 1;
            anio= anio+1;
        }
    }

    // Mostrar fecha
    textSize(20);
    fill(100);
    text("Fecha: (" + dia + ") (" + mes + ") (" + anio + ")", 10, 20);
}
        </script>
    </body>
</html>

